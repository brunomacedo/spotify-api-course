{
  "name": "spotify-api-course",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify API.",
  "main": "index.js",
  "scripts": {
    "build": "./node_modules/.bin/webpack --colors --progress || ECHO.",
    "watch": "npm run build -- --watch || ECHO.",
    "lint": "./node_modules/.bin/eslint source/*.js || ECHO.",
    "prepush": "npm run lint",
    "test": "./node_modules/.bin/mocha specs/**/*.spec.js --require babel-register || ECHO.",
    "test:tdd": "./node_modules/.bin/mocha specs/**/*.spec.js --require babel-register --watch || ECHO.",
    "test:coverage": "nyc npm run test",
    "server": "./node_modules/.bin/webpack-dev-server --inline --content-base build || ECHO."
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "specs/**",
      "build/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunomacedo/spotify-api-course.git"
  },
  "keywords": [
    "spotify",
    "tdd",
    "javascript",
    "learning"
  ],
  "author": "Bruno Macedo <contato@brunomacedo.com.br> (https://brunomacedo.com.br/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brunomacedo/spotify-api-course/issues"
  },
  "homepage": "https://github.com/brunomacedo/spotify-api-course#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "mocha": "^4.1.0",
    "nyc": "^11.4.1",
    "sinon": "^4.1.3",
    "sinon-chai": "^2.14.0",
    "sinon-stub-promise": "^4.0.0",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  }
}
